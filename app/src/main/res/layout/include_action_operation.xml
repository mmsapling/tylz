<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--动作介绍-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">
        <!--动作介绍-->
        <include
            layout="@layout/include_action_produce"/>
        <!--分割线-->
        <ImageView
            style="@style/Line_Style"

            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"/>
        <!--名称类型-->
        <include layout="@layout/include_name_type"/>
    </LinearLayout>
    <!--大分割线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#33000000"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/line_between20px"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#33000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">
        <!--下载-->
        <LinearLayout
            android:id="@+id/ll_download"
            style="@style/ActionOperationLLStyle">
            <ImageView
                android:id="@+id/iv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_action_download"/>
            <TextView
                android:id="@+id/tv_download"
                style="@style/ActionOperationStyle"/>
        </LinearLayout>
        <ImageView
            android:background="@mipmap/line_vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <!--收藏-->
        <LinearLayout
            android:id="@+id/ll_collect"
            style="@style/ActionOperationLLStyle">
            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/heart_normal"/>
            <TextView
                android:id="@+id/tv_collect"
                style="@style/ActionOperationStyle"/>
        </LinearLayout>
        <ImageView
            android:background="@mipmap/line_vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <!--评论-->
        <LinearLayout
            android:id="@+id/ll_comment"
            style="@style/ActionOperationLLStyle">
            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/talk"/>
            <TextView
                android:id="@+id/tv_comment_count"
                style="@style/ActionOperationStyle"/>
        </LinearLayout>
        <ImageView
            android:background="@mipmap/line_vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <!--点赞-->
        <LinearLayout
            android:id="@+id/ll_praise"
            style="@style/ActionOperationLLStyle">
            <ImageView
                android:id="@+id/iv_prise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_action_good"/>
            <TextView
                android:id="@+id/tv_prise_count"
                style="@style/ActionOperationStyle"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#33000000"/>
</LinearLayout>