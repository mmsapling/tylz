<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#FFFFFF"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_game_menu"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--信号-->
        <ImageView
            android:id="@+id/iv_rssi"
            android:layout_width="wrap_content"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/rssi100" />
        <TextView
            android:id="@+id/tv_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_rssi"
            android:layout_toRightOf="@id/iv_rssi"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/rssi"
            android:textColor="#656565"
            android:textSize="14dp" />
        <!--按键总容器-->
        <LinearLayout
            android:layout_toRightOf="@id/tv_rssi"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/tv_rssi"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--上下左右按键容器-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <!--一-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/ib_left_turn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/jg_1"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:id="@+id/ib_top"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/jg_2"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:id="@+id/ib_right_turn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/jg_3"
                        android:scaleType="centerCrop" />
                </LinearLayout>
                <!--二-->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/ib_left"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/jg_4"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:id="@+id/ib_bottom"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/jg_5"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:id="@+id/ib_right"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/jg_6"
                        android:scaleType="centerCrop" />
                </LinearLayout>
                <!--三-->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/ib_quick"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/kuaizou"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:id="@+id/ib_stop"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/jg_7"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:id="@+id/ib_tumbler"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/tumbler"
                        android:scaleType="centerCrop" />
                </LinearLayout>
            </LinearLayout>
            <!--配置按键容器-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/ib_menu_6"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/gamebutton6" />

                    <ImageButton
                        android:id="@+id/ib_menu_1"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/gamebutton1" />

                    <ImageButton
                        android:id="@+id/ib_menu_2"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/gamebutton2" />

                    <ImageButton
                        android:id="@+id/ib_menu_5"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="90dp"
                        android:background="@drawable/gamebutton5" />

                    <ImageButton
                        android:id="@+id/ib_menu_4"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="100dp"
                        android:background="@drawable/gamebutton4" />

                    <ImageButton
                        android:id="@+id/ib_menu_3"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="90dp"
                        android:background="@drawable/gamebutton3" />
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>